<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="40dp">

    <TextView
        android:layout_centerVertical="true"
        android:id="@+id/tv_new_word"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="5dp"
        android:gravity="center"
        android:textColor="#000000"
        android:textSize="15sp" />

    <TextView
        android:layout_centerVertical="true"
        android:id="@+id/tv_new_explain"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginRight="5dp"
        android:layout_toLeftOf="@+id/rl_new_words"
        android:gravity="center"
        android:textColor="#AAAAAA"
        android:textSize="10sp" />

    <RelativeLayout
        android:layout_centerVertical="true"
        android:id="@+id/rl_new_words"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="5dp">

        <ImageView
            android:layout_centerVertical="true"
            android:id="@+id/iv_new"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:scaleType="fitCenter"
            android:src="@drawable/next" />

        <Button
            android:layout_centerVertical="true"
            android:id="@+id/btn_new_delete"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:background="#DDDDDD"
            android:gravity="center"
            android:text="@string/new_words_item_delete"
            android:textColor="#FF0066"
            android:textSize="10sp"
            android:visibility="gone" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_alignParentBottom="true"
        android:background="#CCCCCC" />

</RelativeLayout>